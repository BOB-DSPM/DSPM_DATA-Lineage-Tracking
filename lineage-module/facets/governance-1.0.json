{
  "$id": "https://our-solution.io/facets/governance-1.0.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Governance Facet",
  "type": "object",
  "properties": {
    "_schemaURL": {
      "type": "string",
      "const": "https://our-solution.io/facets/governance-1.0.json",
      "description": "Schema self-reference URL"
    },
    "pii": { "type": "boolean", "description": "Contains PII" },
    "classification": {
      "type": "string",
      "enum": ["public", "internal", "restricted", "secret"]
    },
    "retention": {
      "type": "string",
      "pattern": "^[0-9]+[dmy]$",
      "description": "Retention window (e.g., 90d, 12m, 1y)"
    },
    "encryption": {
      "type": "string",
      "description": "e.g., AES-256-at-rest, TLS1.3-in-transit"
    }
  },
  "required": ["_schemaURL", "classification"],
  "additionalProperties": true
}
